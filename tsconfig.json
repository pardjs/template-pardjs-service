{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist",
    "removeComments": true,
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2017",
    "composite": true,
    "incremental": true
  },
  "exclude": ["node_modules"]
}
